$ENTRY Go {
  = <CheckForErrors <Root () <ValidInput>>>;
}

CheckForErrors {
  e.Tokens =
    <CheckForErrors-Aux
      (
        #TkUnexpected #TokenError #TokenUnexpected #TokenUnexpectedEOF
        #TokenAccum
      )
      e.Tokens
    >;
}

CheckForErrors-Aux {
  (e.ErrorTags-B s.ErrorTag e.ErrorTags-E)
  e.Tokens-B (s.ErrorTag e.Info) e.Tokens-E =
    <CheckForErrors-Fail
      s.ErrorTag (e.Tokens-B) (s.ErrorTag e.Info) (e.Tokens-E)
    >;

  (e.ErrorTags) e.Tokens =
    /* всё в порядке */;
}

$ENUM CheckForErrors-Fail;

ValidInput {
  =
    '%%\n'
    'int x = 0;\n'
    '%%\n'
    '\n'
    '// Все возможные токены для компилятора версии 1.3.2\n'
    '\n'
    '/*\n'
    '  Регулярно обновлять при изменении лексики языка!!!\n'
    '*/\n'
    '\n'
    '$ENUM E;\n'
    '$EENUM EE;\n'
    '\n'
    '$ENTRY Go {\n'
    '  e.Empty =\n'
    '    <Check <Emit>>\n'
    '    <S (<ES [E EE #L #A #B #E #L 1000]>)>;\n'
    '\n'
    '  t.X^ s.Y = ;\n'
    '}\n'
    '\n'
    '$EXTERN Go;\n'
    '$FORWARD Emit;\n'
    '$SWAP S;\n'
    '$ESWAP ES;\n'
    '$LABEL L, A, B, E, L;\n'
    '\n'
    '%%\n'
    'int y = 0;\n'
    '%%\n'
    '\n'
    'Check {\n'
    '  ''\\d32\\D032\\d10\\d13\\d9\\d09\\d009\\d7\\d8\\d12\\d11\\d1\\d2!'' = ;\n'
    '}\n'
    '\n'
    'Emit {\n'
    '  = ''  \\n\\r\\t\\t\\t\\a\\b\\f\\v\\x01\\X02!'';\n'
    '}\n'
    '\n'
    '%%\n'
    'int z = 0;\n'
    '%%\n';
}

