$IMPORT MFileIO; // И однострочные тоже.
$IMPORT MInOut;
$IMPORT MOS;
$YMPORT Broken; // А вот подсветка ошибки

$DATA Encapsulated;

$ENTRY CreateEncapsulated {
  e.X = [Encapsulated e.X];
}

$ENTRY Go {
  = <Main <MOS::ArgList>>;
}

Main {
  (e.ProgName) =
    <InOut::WriteLine 'Arguments not found' 10 12>
    // А вот незакрытая кавычка:
    <InOut::WriteLine 'Ooops>;

  (e.ProgName) e.Files =
    <Map
      {
        (e.NextFile) =
          <MFileIO::Save
            (e.NextFile '.out')
            <MFileIO::Load e.NextFile>
          >;
      }
      e.Files
    >;
}

$END Test.

